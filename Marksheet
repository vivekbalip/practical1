Public Class Form1

    Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click
        ' Get subject marks from textboxes
        Dim s1 As Double = Val(TextBox1.Text)
        Dim s2 As Double = Val(TextBox2.Text)
        Dim s3 As Double = Val(TextBox3.Text)
        Dim s4 As Double = Val(TextBox4.Text)
        Dim s5 As Double = Val(TextBox5.Text)

        ' Calculate total and percentage
        Dim total As Double = s1 + s2 + s3 + s4 + s5
        Dim percentage As Double = (total / 500) * 100
        Dim grade As String = ""

        ' Grade logic using nested if
        If percentage >= 90 Then
            grade = "A+"
        ElseIf percentage >= 75 Then
            grade = "A"
        ElseIf percentage >= 60 Then
            grade = "B"
        ElseIf percentage >= 45 Then
            grade = "C"
        Else
            grade = "F"
        End If

        ' Output results
        TextBox6.Text = total.ToString("0.00")
        TextBox7.Text = percentage.ToString("0.00") & "%"
        TextBox8.Text = grade
    End Sub

End Class
